<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="#EDEDED"
                android:orientation="vertical">
    <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:id="@+id/questin_dialog_viewer">
    </android.support.v4.view.ViewPager>

    <ImageView android:layout_width="match_parent"
               android:layout_height="70dp"
                android:src="@drawable/city_foother"
                android:layout_alignTop="@id/questin_dialog_viewer"
                android:rotation="180"
                android:scaleType="fitXY"/>
    <ImageView android:layout_width="match_parent"
               android:layout_height="70dp"
               android:src="@drawable/city_foother"
               android:layout_alignTop="@id/questin_dialog_menu"
               android:layout_marginTop="-70dp"
               android:scaleType="fitXY"/>

    <android.support.design.widget.BottomNavigationView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:menu="@menu/quesoin_menu_bar"
            android:layout_alignBottom="@id/questin_dialog_viewer"
            android:id="@+id/questin_dialog_menu"
            android:background="#EDEDED"/>
</RelativeLayout>